<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:key="gateCodesCategory"
            app:title="Gate Codes">

        <SwitchPreferenceCompat
                app:key="gateCodesLocationUpdating"
                app:title="always order by nearest"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:key="advancedCategory"
            app:title="Advanced">

        <EditTextPreference
                app:key="advancedDirectionsApiKey"
                app:title="Add Google Directions API Key to start calculating Trip distances"/>

        <SwitchPreferenceCompat
                app:key="sendCrashReports"
                app:title="Send crash reports"
                app:defaultValue="true"/>

        <Preference
                app:key="about"
                app:title="About app">
        </Preference>

    </PreferenceCategory>



</PreferenceScreen>